#:kivy 1.0.9

<SongCard>:
    canvas:

        # Draw border
        Color:
            rgb: (0.8, 0.8, 0.8) if self.focus else (0.2, 0.2, 0.2)
        RoundedRectangle:
            pos: self.pos
            size: self.size
        
        # Draw content
        Color:
            rgba: (0.2, 0.2, 0.2, 1)
        RoundedRectangle:
            pos: self.x+5, self.y+5
            size: self.width-10, self.height-10

<Prompt>:
    canvas:

        # Draw border
        Color:
            rgb: (0, 0, 0)
        RoundedRectangle:
            pos: self.pos
            size: self.size

<TeleprompterMain>:
    canvas:
                 
         
