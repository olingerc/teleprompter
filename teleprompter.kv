<TeleprompterWidget>:
    id: main

    LoadingScreenLayout:
        ls_text: 'Loading ...'
        id: ls_screen
        opacity: 1 if main.mode == 'loading' else 0
        Label:
            id: ls-label
            font_size: 50
            text: ls_screen.ls_text
    
    HomeLayout:
        id: home_layout
        orientation: 'lr-tb'
        cols: app.HOME_MIN_COLS_NUM
        rows: app.HOME_MIN_ROWS_NUM
        spacing: 10
        padding: 10

        opacity: 1 if main.mode == 'home' else 0
    
    PromptLayout:
        id: prompt_layout
        opacity: 1 if main.mode == 'prompt' else 0
         

<SongCard>:
    opacity: 0 if self.is_placeholder is True else 1
    padding: 10
    orientation: 'vertical'
    id: song_card

    canvas:

        # Draw border
        Color:
            rgb: (0.8, 0.8, 0.8) if self.focus else (0.2, 0.2, 0.2)
        RoundedRectangle:
            pos: self.pos
            size: self.size
        
        # Draw content
        Color:
            rgba: (0.2, 0.2, 0.2, 1)
        RoundedRectangle:
            pos: self.x+5, self.y+5
            size: self.width-10, self.height-10

    SequenceLabel:
        text: song_card.sequence or ""
    ArtistLabel:
        text: song_card.artist or ""
    SongLabel:
        text: song_card.song or ""
